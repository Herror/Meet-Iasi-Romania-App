<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.meetiasiromania">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MuseumActivity"
            android:label="Museums">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.meetiasiromania.MainActivity" />
        </activity>

        <activity
            android:name=".ParkActivity"
            android:label="Parks">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.meetiasiromania.MainActivity" />
        </activity>

        <activity
            android:name=".HotelActivity"
            android:label="Hotels">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.meetiasiromania.MainActivity" />
        </activity>

        <activity
            android:name=".RestaurantActivity"
            android:label="Restaurants">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.android.meetiasiromania.MainActivity" />
        </activity>

        <activity
            android:name=".MainAttractionActivity"
            android:label="Main Attractions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.meetiasiromania.MainActivity" />
        </activity>

    </application>

</manifest>